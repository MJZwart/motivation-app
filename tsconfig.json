{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "build",
        "module": "esnext",
        "target": "esnext",
        "types": ["vite/client", "node"],
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noEmit": true,
        "checkJs": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "paths": {
            "assets/*": ["./resources/assets/*"],
            "components/*": ["./resources/js/components/*"],
            "services/*": ["./resources/js/services/*"],
            "pages/*": ["./resources/js/pages/*"],
            "types/*": ["./types/*"],
            "/js/*": ["./resources/js/*"]
        }
    },
    "typeAcquisition": {
        "include": ["jest"]
    },
    "include": ["resources/js/**/*", "resources/types/**/*", "vite.config.js"],
    "exclude": ["node_modules/**/*", "build/**/*", "cypress/**/*"]
}
