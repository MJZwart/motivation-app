{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "baseUrl": ".",
        "paths": {
            "assets/*": ["./resources/assets/*"],
            "components/*": ["./resources/js/*"],
            // "handlers/*": ["./resources/handlers/*"],
            // "helpers/*": ["./resources/helpers/*"],
            "services/*": ["./resources/services/*"],
            "pages/*": ["./resources/pages/*"],
            "types/*": ["./types/*"],
            "@/*": ["./resources/js/*"]
        },
        "jsx": "preserve"
    },
    "typeAcquisition": {
        "include": ["jest"]
    },
    // addeing vite/client here to import the ImportMetaEnv interface
    "include": ["resources/**/*", "types/**/*"]
}
